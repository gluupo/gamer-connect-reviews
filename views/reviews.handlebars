<div class="row w-100">
  <div class="mx-auto my-auto">
    <div class="container">
      {{#each reviews}}
      <div class="card mb-2">
        {{log this}}
        <h1>{{game.name}}</h1>
        <a href="/game/id/{{game.id}}"><img
            src="https://images.igdb.com/igdb/image/upload/t_cover_big/{{game.cover_id}}.jpg"></a>
        <p>
        <h4>Review By:</h4><a href="/user/{{user.id}}">
          <h3>{{user.username}}</h3>
        </a>
        <br>
        {{review}}
        </p>
      </div>
      {{/each}}
    </div>
  </div>
</div>