<div class="row w-100">
  <div class="mx-auto my-auto">
    <div class="container p-3" id="gameReviewCard">
      {{log this}}
      <a href="/game/id/{{game.id}}"><img src="
    https://images.igdb.com/igdb/image/upload/t_cover_big/{{game.cover_id}}.jpg"></a>
      <div>
        {{game.summary}}
        <br>
        {{game.release_date}}
      </div>
      {{#each game.reviews}}
      <div class="card">
        <a href="/user/{{user.id}}">
          <h3>{{user.username}}</h3>
        </a>
        <p>{{review}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</div>