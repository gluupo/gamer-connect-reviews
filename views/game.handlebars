{{> searchbar}}

<div class="container">
  {{log game.reviews}}
  <a href="/game/{{game.id}}"><img src="
    https://images.igdb.com/igdb/image/upload/t_cover_big/{{game.cover_id}}.jpg"></a>
  {{#each game.reviews}}
  <div class="card">
    <a href="/user/{{user.id}}">
      <h3>{{user.username}}</h3>
    </a>
    <p>{{review}}</p>
  </div>
  {{/each}}
</div>