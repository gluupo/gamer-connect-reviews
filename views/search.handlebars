<div class="container" id="gameSearchContainer">
  {{#each games}}
  <div class="card mb-2 d-flex flex-row flex-wrap" id="gameSearchCard">
    <a class="col-sm-12 col-md-3 text-center" href="/game/id/{{id}}"><img class="img-fluid" src="
    https://images.igdb.com/igdb/image/upload/t_cover_big/{{cover.image_id}}.jpg" class="gameImage"></a>
    <div class="col-sm-12 col-md-9" style="padding-left: 5px;">
      <h1>{{name}}</h1>
      {{summary}}
      <br>
      Release Date: {{format_date release_dates.[0].date}}
    </div>
  </div>
  {{/each}}
</div>